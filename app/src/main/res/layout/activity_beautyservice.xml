<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beautyservice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal">



        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Beauty Services"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="218dp"
            android:layout_height="226dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/beauty1" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Facials"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="219dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/beauty2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Pedicure"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="219dp"
            android:layout_height="227dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/beauty3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Manicure"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="254dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/beauty4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Hair-Do"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="219dp"
            android:layout_height="248dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/sareedraping" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Saree Draping"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/fullpackage" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Full package"
            android:textAlignment="center"
            android:textStyle="italic"
            android:gravity="center_horizontal" />



    </LinearLayout>

</ScrollView>